<div class="container">
  <%= simple_form_for @book do |f| %>
    <%= f.input :title %>
    <%= f.simple_fields_for :author do |a| %>
      <%= a.input :first_name %>
      <%= a.input :last_name %>
    <% end %>
    <%= f.input :summary %>
    <%= f.input :cover %>
    <%= f.input :isbn %>
    <%= f.submit %>
  <% end %>
</div>
